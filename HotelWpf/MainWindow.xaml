<Window x:Class="HotelWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <DockPanel>
            <ToolBar DockPanel.Dock="Top">
                <Button Click="Exit_Click" Width="50" Margin="5">Exit</Button>
            <Button Click="Load_Click" Width="50" Margin="5">Load</Button>
                <!--<Button Click="Update_Click">Update</Button>-->
                <ComboBox x:Name="TablesComboBox" Width="100">
                    <ComboBoxItem Content="Hotels"/>
                    <ComboBoxItem Content="HotelRooms"/>
                    <ComboBoxItem Content="Employees"/>
                    <ComboBoxItem Content="Visitors"/>
                    <ComboBoxItem Content="Positions"/>
                    <ComboBoxItem Content="Countries"/>
                    <ComboBoxItem Content="Cities"/>
                </ComboBox>
        </ToolBar>
            <DataGrid x:Name="tableView"></DataGrid>
        </DockPanel>
</Window> 
