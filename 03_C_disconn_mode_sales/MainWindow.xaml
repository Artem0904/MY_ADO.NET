<Window x:Class="_03_C_disconn_mode_sales.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_03_C_disconn_mode_sales"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Click="Button_Click">Load</Button>
            <Button Click="Button_Click_1">Update</Button>
            <ComboBox x:Name="TablesComboBox" Width="100">
                <ComboBoxItem Content="Customers" />
                <ComboBoxItem Content="Sellers" />
                <ComboBoxItem Content="Sales" />
            </ComboBox>
        </ToolBar>
        <DataGrid x:Name="grid"></DataGrid>
    </DockPanel>
</Window>
